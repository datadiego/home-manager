[server1]
interval=10000
command=~/.config/i3blocks/scripts/server-check.sh "reddit.com"
color=#bd93f9     # morado para servidor
align=center

[server2]
full_text="Servidor"
interval=10000
command=~/.config/i3blocks/scripts/server-check.sh "example.org"
color=#bd93f9     # morado también para mantener consistencia
align=center

[moñeco]
full_text="⁽⁽◝( • ω • )◜⁾⁾"
interval=once
color=#f8f8f2     # blanco suave
align=center

[date]
command=date | awk '{print $1, $2, $3, $4}'
interval=360000
color=#f8f8f2     # blanco suave

[clock]
command=date '+%H:%M:%S'
interval=1
color=#8be9fd     # azul para el reloj
align=center

[mem]
command=free -h | grep Mem | awk '{print $3 "/" $2}'
interval=10
color=#50fa7b     # verde para memoria
align=left

[battery]
full_text="Bateria: "
command=~/.config/i3blocks/scripts/bateria.sh
interval=60
color=#ffb86c     # naranja para batería
align=right

[conexion]
command=ip -4 -o addr show scope global | awk '{print $4}' | cut -d'/' -f1
interval=10
color=#ff79c6     # rosado para red (igual que en tu config original)
align=right
